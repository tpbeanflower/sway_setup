element-text {
    background-color: transparent;
    cursor:           inherit;
    highlight:        inherit;
    text-color:       inherit;
}

element-icon {
    background-color: transparent;
    padding: 0px 0px 0px 5px;
    size:             1.0000em ;
    cursor:           inherit;
    text-color:       inherit;
}

window {
    border-radius: 15px;
    border: 2px;
    border-color: var(blue);
    width: 800px;
    background-color: @bg;
}

mainbox {
    padding: 16px;
    spacing: 16px;
    children: [inputbar, message, listview, mode-switcher];
}

listview {
    lines: 10;
    scrollbar: false;
    spacing: 5px;
    fixed-height: true;
}

