inputbar {
    text-color: @fg;
    padding: 10px;
    border: 0px 2px 2px 0px;
    border-radius: 10px;
    border-color: var(selected-foreground);
    background-color: var(background-alt);
    // children: [prompt, textbox-prompt-colon, entry, overlay, case-indicator];
    children: [textbox-prompt-colon, entry, overlay, case-indicator];
}

mode-switcher {
    spacing: 10px;
    padding: 0px 250px;
    // background-color: #ff0000;
    text-color: var(normal-foreground);
}

button {
    cursor: pointer;
    text-color: var(normal-foreground);
    background-color: var(background-alt);
    padding: 10px;
    border-radius: 10px;
}

button selected {
    border: 0px 2px 2px 0px;
    border-radius: 10px;
    border-color: var(urgent-foreground);
    text-color: var(urgent-foreground);
    background-color: var(background);
}

case-indicator {
    spacing:    0;
    text-color: @fg;
}

entry {
    text-color: var(dim-foreground);
    placeholder: "Search";
    placeholder-color: var(dim-foreground);
}

prompt {
    text-color: @fg;
}

textbox-prompt-colon {
    expand:     false;
    str:        "ï€‚ ";
